<% @title="Neuer Benuter" %>
<h2>Benutzer anlegen</h2>

<%= form_for(@user) do |f| %>
	
	<%if @user.errors.any? %>	
		<% @user.errors.full_messages.each do |msg| %>		
			<ul>
				<li><%=msg%></li>
			</ul>		
		<%end%>	
	<%end%>
	
	<p>
		<%= f.label :email %>
		<%= f.text_field :email %>
	</p>
	<p>
		<%= f.label :password %>
		<%= f.password_field :password %>
	</p>
	<p>
		<%= f.label :password_confirmation %>
		<%= f.password_field :password_confirmation %>
	</p>
	<p>
		<%= f.submit %>
	</p>


<%end%>